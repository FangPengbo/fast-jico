<?xml version="1.0" encoding="UTF-8"?>
<beans>

    <bean id="userService" class="top.ddddddddd.springframework.test.bean.UserServiceImpl"/>

    <bean class="top.ddddddddd.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="top.ddddddddd.springframework.test.aop.UserServiceBeforeAdvice"/>

    <bean id="methodInterceptor" class="top.ddddddddd.springframework.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="top.ddddddddd.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* top.ddddddddd.springframework.test.bean.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>



</beans>